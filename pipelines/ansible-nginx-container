#!/usr/bin/env groovy

pipeline {
    // run jobs on agents with the label swarm
    agent { label 'swarm' }
//    agent any 
    stages {
        stage('set up environmenet') {
            steps {
                sh 'which python
                .  /var/lib/jenkins/ansible-container/bin/activate
                which python'
            //    sh 'eval "$(chef shell-init bash)"'
                sh 'which ruby'
            }
        }
        stage('build') {
            steps {
                sh 'env'
                sh 'ls -trlah'
            }
        }
    }
}
