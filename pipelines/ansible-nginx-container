#!/usr/bin/env groovy

pipeline {
    // run jobs on agents with the label swarm
    agent { label 'swarm' }
//    agent any 
    stages {
        stage('set up environmenet') {
            steps {
                sh 'which python'
                sh '.  /var/lib/jenkins/ansible-container/bin/activate'
                sh 'which python'
            //    sh 'eval "$(chef shell-init bash)"'
                sh 'which ruby'
            }
        }
        stage('build') {
            steps {
                sh 'env'
                sh 'ls -trlah'
                sh 'docker images'
                sh 'docker ps'
                sh './build-nginx-container.bash'
                sh 'docker images'
                sh 'docker ps'
            }
        }
    }
}
